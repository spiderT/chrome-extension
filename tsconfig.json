{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "jsx": "react",
    "outDir": "./dist/",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "global.d.ts"]
}
